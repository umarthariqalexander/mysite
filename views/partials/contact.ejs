<div class="form-outer-cover">
  <div class="mobile-header">
    Contact Me
  </div>
  <form id="contactForm" class="" action="./sendmail" method="post">
    <div class="" style="margin-bottom: 20px;">
      <label for="name">Name *</label>
      <div class="row">
        <div class="col-md-6 first-name">
          <div id="mobile-first-name" class="" style="font-size: 12px;">
            First Name *
          </div>
          <input type="text" id="firstName" name="firstname" value="">
          <div id="desktop-first-name" class="" style="font-size: 12px;">
            First Name *
          </div>
        </div>
        <div class="col-md-6">
          <div id="mobile-last-name" class="" style="font-size: 12px;">
            Last Name
          </div>
          <input type="text" id="lastName" name="lastname" value="">
          <div id="desktop-last-name" class="" style="font-size: 12px;">
            Last Name
          </div>
        </div>
      </div>
    </div>
    <div class="" style="margin-bottom: 20px;">
      <label for="">Email Address *</label>
      <div class="">
        <input id="email" type="email" name="email" value="">
      </div>
    </div>
    <div class="" style="margin-bottom: 20px;">
      <label for="subject">Subject *</label>
      <div class="">
        <input id="subject" type="text" name="subject" value="">
      </div>
    </div>
    <div class="" style="margin-bottom: 20px;">
      <label for="message">Message *</label>
      <div class="">
        <textarea id="message" name="message"></textarea>
      </div>

    </div>
    <div class="button-cover">
      <div class="clear-btn" style="margin-right: 30px;" onclick="clearTheForm()">
        CLEAR
      </div>
      <div class="submit-btn" onClick="fetchFieldValues()">
        SUBMIT
      </div>
      <div id="submitSuccess" class="submit-success-response">
        Your Message Submit Successfully
      </div>
      <div id="submitFailed" class="submit-failure-response">
        Some Error Occured
      </div>
      <div id="requiredFiledAlert" class="submit-failure-response">
        Required fields cant be empty
      </div>
    </div>
  </form>
</div>
